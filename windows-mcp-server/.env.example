# Windows MCP Server Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
WINDOWS_MCP_SERVER__HOST=127.0.0.1
WINDOWS_MCP_SERVER__PORT=8765
WINDOWS_MCP_SERVER__TRANSPORT=stdio
WINDOWS_MCP_SERVER__TIMEOUT=30

# Security Configuration
WINDOWS_MCP_SECURITY__REQUIRE_AUTH=false
WINDOWS_MCP_SECURITY__API_KEY=
WINDOWS_MCP_SECURITY__SANDBOX_MODE=true
WINDOWS_MCP_SECURITY__ALLOWED_PATHS=
WINDOWS_MCP_SECURITY__ALLOW_PROCESS_MANAGEMENT=true
WINDOWS_MCP_SECURITY__ALLOW_REGISTRY_ACCESS=true
WINDOWS_MCP_SECURITY__ALLOW_CLIPBOARD_ACCESS=true

# Logging Configuration
WINDOWS_MCP_LOGGING__LEVEL=info
WINDOWS_MCP_LOGGING__FORMAT=console
WINDOWS_MCP_LOGGING__FILE=
