# ===========================================
# WEB SEARCH INTEGRATION (Google Custom Search)
# ===========================================
# Required for web search tool functionality
VITE_GOOGLE_CX=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Sentry error tracking (recommended for production)
# DSN is the client-side Data Source Name for error reporting
VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@o000000.ingest.sentry.io/0000000
# Auth token for uploading source maps during build (CI/CD only)
SENTRY_AUTH_TOKEN=sntrys0_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Enable Sentry in development (default: only enabled in production)
# VITE_SENTRY_ENABLED=true

# Google Analytics tracking (optional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXXXXXXXX

# Application URL and environment
VITE_APP_URL=https://your-production-domain.com
VITE_APP_ENV=development

# ===========================================
# NODE CONFIGURATION
# ===========================================
NODE_VERSION=20
NODE_OPTIONS=--max_old_space_size=4096

# ===========================================
# OPTIONAL: Development Flags
# ===========================================
# Enable demo login mode (set to "true" to enable, must be explicit)
# VITE_DEMO_MODE=true

# Demo user credentials (for development testing with VITE_DEMO_MODE=true)
# VITE_DEMO_EMAIL=demo@example.com
# VITE_DEMO_PASSWORD=demo_password

# ===========================================
# BUILD & VERSION INFO
# ===========================================
# Application version and build info (used in footer/about)
VITE_APP_VERSION=1.0.0
VITE_BUILD_NUMBER=1

# ===========================================
# API CONFIGURATION
# ===========================================
# Base URL for API calls (defaults to relative path if not set)
# VITE_API_URL=https://api.your-domain.com

# Comma-separated list of keys to omit from secrets scanning
# SECRETS_SCAN_OMIT_KEYS=VITE_SUPABASE_URL,VITE_SUPABASE_ANON_KEY,VITE_STRIPE_PUBLISHABLE_KEY,VITE_JWT_SECRET

# ===========================================
# E2E TESTING
# ===========================================
# Credentials for E2E test user (Playwright tests)
# IMPORTANT: Set actual values in CI/CD secrets, never commit real credentials
E2E_TEST_EMAIL=test@example.com
E2E_TEST_PASSWORD=
# Base URL for E2E tests (defaults to localhost:5173 if not set)
PLAYWRIGHT_BASE_URL=http://localhost:5173
