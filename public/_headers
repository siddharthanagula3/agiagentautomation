# Netlify Headers Configuration
# Proper MIME types, caching, and security headers

# Fonts - Long-term caching with immutable
/fonts/*
  Content-Type: font/woff2
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# JavaScript - Long-term caching with immutable
/js/*
  Content-Type: text/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# CSS - Long-term caching with immutable
/css/*
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Vite-generated assets (already have cache-busting hashes)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# HTML pages - Short caching
/*.html
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff
  Content-Security-Policy: frame-ancestors 'none'

# Default headers for all resources
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Cache-Control: public, max-age=3600
